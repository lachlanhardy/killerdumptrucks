      %published= atomify_date(item.published)
      %updated= atomify_date(item.updated || item.published)
      %link{:href => "http://killerdumptrucks.com/#{item.path.split("/")[-3]}/#{item.path.split("/")[-2]}/", :rel => "alternate", :hreflang => "en", :type => "text/html"}
