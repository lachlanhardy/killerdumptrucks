  - for item in @items[0..9]
    %entry
      %id= "tag:killerdumptrucks.com,#{item.published.strftime("%Y-%m-%d")}:/#{item.path.split("/")[-3]}/#{item.published.strftime("%Y%m%d%H%M%S")}"
